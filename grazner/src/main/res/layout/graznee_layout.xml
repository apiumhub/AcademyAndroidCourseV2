<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

  <TextView
      android:id="@+id/authorNameTv"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:textStyle="bold|italic"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="John Doe"
      />

  <TextView
      android:id="@+id/grazneeBodyTv"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:ellipsize="end"
      android:maxLength="160"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/authorNameTv"
      tools:text="@tools:sample/lorem/random"
      />

  <TextView
      android:id="@+id/timestampTv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_chainStyle="packed"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/grazneeBodyTv"
      tools:text="17/05/2020"
      />

</androidx.constraintlayout.widget.ConstraintLayout>