<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_timeline">

    <fragment
        android:id="@+id/navigation_timeline"
        android:name="com.apiumhub.androidcourse.timeline.presentation.TimelineFragment"
        android:label="@string/title_timeline"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.apiumhub.androidcourse.search.presentation.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_timeline" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.apiumhub.androidcourse.notifications.presentation.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
